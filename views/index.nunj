{% extends 'base.nunj' %}

{% block main %}
  {% if user %}
    Welcome, {{ user.name }}! You have {{ user.karma }} karma. 
    <br/>
    <form action="/gief" method="POST">
    	Give <input type="number" name="karma" value="1">
    	karma to <input type="email" name="to">
    	<input type="submit" value="Give karma">
    </form>
    <a href="/logout">Logout</a>
  {% else %}
    <a href="/login">Login</a>
  {% endif %}
{% endblock %}
