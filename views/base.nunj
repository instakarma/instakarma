<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <title>suchkarma</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/style/normalize.css">
    <link rel="stylesheet" href="/style/skeleton.css">
    <link rel="stylesheet" href="/style/custom.css">
</head>

{% block header %}

<header>
    <div class="container">
        <div class="row">
          <div class="twelve columns top-bar">
            <a href="/">
                <img alt="Such karma" src="suchkarma.png" height="128" width="128">
            </a>

            {% if user %}
                <span class="u-pull-right top-bar__floater">
                    <a href="/me">{{ user.name }}</a> |
                    <strong>{{ user.karma }} karma</strong>
                    <img class="avatar" src="{{ user.avatar }}">
                </span>
            {% endif %}
          </div>
        </div>
    </div>
</header>

{% endblock %}

<div class="container">

    {% block main %}
    {% endblock %}

    <footer>
        <small>blah blah &trade; &copy;</small>
    </footer>

</div>

